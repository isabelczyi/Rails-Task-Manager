<% if task.completed %>
  <% @checkbox = "<i class='fa-solid fa-square-check checkbox'></i>" %>
  <%= link_to sanitize(@checkbox), completed_toggle_task_path(task), remote: true, method: :post%>

<% else %>
  <% @checkbox = '<i class="fa-solid fa-square checkbox"></i>' %>
  
  <%= link_to sanitize(@checkbox), completed_toggle_task_path(task), remote: true, method: :post%>

<% end %>

